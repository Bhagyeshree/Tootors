<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".register.SignUpActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fullname_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fullname"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fullname_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abc" />

            <TextView
                android:id="@+id/username_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abc" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                >

                <Switch
                    android:id="@+id/is_tootor_input_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:switchPadding="5dp"
                    android:text="@string/want_to_tootor"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#0097d8"
                    android:textSize="@dimen/main_font_size"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/price_input_signup"
                    android:hint="Price ($/hr)"
                    android:text="13" />
            </LinearLayout>

            <TextView
                android:id="@+id/password_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password_input_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="textPassword"
                android:text="123" />


            <TextView
                android:id="@+id/password2_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password2_input_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="textPassword"
                android:text="123" />


            <TextView
                android:id="@+id/email_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_input_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="textEmailAddress|textPassword"
                android:text="email" />


            <TextView
                android:id="@+id/email2_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email2_input_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="textEmailAddress|textPassword"
                android:text="email" />

            <TextView
                android:id="@+id/phone_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/phone_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:text="1234567890" />


            <TextView
                android:id="@+id/streetaddress_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/streetaddress"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/streetaddress_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="1234" />


            <TextView
                android:id="@+id/city_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/city_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="LA" />


            <TextView
                android:id="@+id/state_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/state"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/state_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="CA" />


            <TextView
                android:id="@+id/zip_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zip"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/zip_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|textPostalAddress"
                android:text="90001" />

            <TextView
                android:id="@+id/focus_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/focus"
                android:hint="Math, Science, Art"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/focus_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Math, Reading, Science" />

            <TextView
                android:id="@+id/description_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/description_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="I like being a Tootor!" />

            <TextView
                android:visibility="gone"
                android:id="@+id/picture_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/state"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />


            <EditText
                android:visibility="gone"
                android:id="@+id/picture_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" />

            <TextView
                android:id="@+id/video_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_link"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0097d8"
                android:textSize="@dimen/main_font_size"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/video_input_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" />

            <Button
                android:id="@+id/button_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#2b2b2b"
                android:onClick="onSignUpClick"
                android:text="@string/signup"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
